  bg[SELECTED]    = "#698f64"
  
  base[SELECTED]    = "#698f64"
  base[ACTIVE]      = "#d4d9d2"
  base[INSENSITIVE] = "#f4f9f2"
  
	text[SELECTED]  = { 1.0, 1.0, 1.0 }
  text[ACTIVE]    = { 1.0, 1.0, 1.0 }
	
